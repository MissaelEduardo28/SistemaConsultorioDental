@model SistemaConsultorioDental.Domain.Entities.Dentista

@{
    ViewData["Title"] = "Agregar Dentista";
}

<h2>Agregar Dentista</h2>

<form asp-action="AgregarDentista" method="post" class="mt-4">

    <div class="form-group">
        <label>Nombre Completo</label>
        <input asp-for="NombreCompleto" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-4">Guardar</button>
    <a asp-action="MostrarDentista" class="btn btn-secondary mt-4">Cancelar</a>
</form>
