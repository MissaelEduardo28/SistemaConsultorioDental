@model SistemaConsultorioDental.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Agregar Paciente";
}

<h2>Agregar Paciente</h2>

<form asp-action="AgregarPaciente" asp-controller="Paciente" method="post">

    <div class="form-group mb-3">
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Nacionalidad"></label>
        <input asp-for="Nacionalidad" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-controller="Home" asp-action="Menu" class="btn btn-secondary">Volver</a>
</form>
