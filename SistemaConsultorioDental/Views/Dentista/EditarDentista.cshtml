@model SistemaConsultorioDental.Domain.Entities.Dentista

@{
    ViewData["Title"] = "Editar Dentista";
}

<h2>Editar Dentista</h2>

<form asp-action="EditarDentista" method="post" class="mt-4">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nombre Completo</label>
        <input asp-for="NombreCompleto" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-4">Actualizar</button>
    <a asp-action="MostrarDentista" class="btn btn-secondary mt-4">Cancelar</a>
</form>
